<div class="col-md-4">
  <div class="card mb-4 shadow-sm" style="border-color:<%= jobs[i].tag %>">
    <h5 class="card-header" style="background-color:<%= jobs[i].tag %>"></h5>
    <div class="card-body">
      <h5 class="card-title"><%= jobs[i].name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><i class="fa fa-map-marker"></i> <i><%= jobs[i].location %></i> <small class="text-muted float-right"> <%= jobs[i].cost %> SEK</small></h6>
      <p class="card-text"><%= jobs[i].desc %></p>
      <div class="d-flex justify-content-center">
      <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#jobModal<%= i %>">Do it!</button>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="jobModal<%= i %>" tabindex="-1" role="dialog" aria-labelledby="jobModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="border-color:<%= jobs[i].tag %>">
      <div class="modal-header" style="background-color:<%= jobs[i].tag %>" ></div>
      <div class="modal-body">
        <h5 class="modal-title"><%= jobs[i].name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
